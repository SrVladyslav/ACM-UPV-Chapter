<div class="container p-4">
    <div class="row">
        <div class="col-md-12 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <img src="{{user.image_url}}" alt="Logo" class="card-img-top mx-auto m-2 rounded-circle profile_img">
                    <h5>Name: {{user.name}} </h5>
                    <h5>Username: {{user.username}}</h5>
                    <h5>Email: {{user.email}}</h5>
                    <h5>Role: {{user.role}}</h5>
                    <hr>
                    <a href="/create_post" class="btn btn-primary m-2">Add post</a>
                    <a href="/profile/edit/{{user.id}}" class="btn btn-secondary">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row space">
        <div class="col-md-12">
            <div class="card-body text-center">
                <h3>My posts</h3>
            </div>
        </div>
    </div>
    <div class="row">
        {{#each posts}}
            <div class="col-md-6">
                <div class="card text-center">
                    <div class="card-body">
                        <p class="m-2">
                            <img src="{{image_url}}" alt="Image" width="400" height="200">
                        </p>
                        <h4 class="m-2 card_title">
                            {{title}}
                        </h4>
                        <hr>
                        <p class="m-2 card_body">
                            {{body}}
                        </p>
                        <hr>
                        <p class="m-3 card_publi">
                            Posted: {{timeago published}}
                        </p>
                        <a href="/posts/edit/{{id}}" class="btn btn-secondary">Edit</a>
                        <a href="/posts/delete/{{id}}" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-12 mx-auto">
                <div class="card card-body text-center">
                    <p>There are not posts yet.</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>