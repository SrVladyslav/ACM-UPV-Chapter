<div class="container p-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Edit Post</h3>
                </div>
                <div class="card-body">
                    <form action="/posts/edit/{{posts.id}}" method="POST">
                        <div class="form-group">
                            <center><img src="{{posts.image_url}}" alt="IMG" width="300" height="auto"></center>
                        </div>
                        <div class="form-group">
                            <input type="text" placeholder="Title" value="{{posts.title}}" class="form-control" name="title" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea type="body" placeholder="Body" name="body" rows="3" class="form-control">{{posts.body}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>